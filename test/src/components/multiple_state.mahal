<script>
import { Component, computed, reactive } from "mahal";
import { state, mutation, expression } from "@mahaljs/store";
import { BaseComponent } from "./base_component";

export default class extends BaseComponent {
    @state("firstName")
    firstName;

    @state("lastName")
    lastName;

    @expression("fullName")
    fullName;

    @expression("fullNameInReverse")
    fullNameInReverse;

    @mutation("firstName")
    setFirstName;

    @mutation("lastName")
    setLastName;
}
</script>

 

